<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
    <property name="hibernate.connection.url">jdbc:sqlserver://localhost:1433;databaseName=END_GAME</property>
    <property name="hibernate.connection.username">sa</property>
    <property name="hibernate.connection.password">1234$</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <mapping class="entities.Orders"/>
    <mapping class="entities.OrderDetail"/>
    <mapping class="entities.TblCourse"/>
    <mapping class="entities.TblCourseware"/>
    <mapping class="entities.TblLesson"/>
    <mapping class="entities.TblRole"/>
    <mapping class="entities.TblSubject"/>
    <mapping class="entities.TblUser"/>
    <mapping class="entities.TblfileType"/>
  </session-factory>
</hibernate-configuration>
